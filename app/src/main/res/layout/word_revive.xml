<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.lessask.word.word.WordActivity">

    <TextView
        android:id="@+id/soeasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="so easy"
        android:textSize="14dp"
        android:textColor="@color/grey"
        android:background="#00000000"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:textColor="#232323"
        android:text="hello"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        />
    <TextView
        android:id="@+id/soundmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#232323"
        android:text="/hə'ləʊ/"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/word"
        android:layout_marginTop="0dp"
        />

    <LinearLayout
        android:id="@+id/meanings"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/soundmark"
        android:layout_marginTop="36dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textAlignment="center"
            android:text="n. 你好"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:text="n. 你好"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:text="n. 你好"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:text="n. 你好"
            />
    </LinearLayout>

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/timer"
        android:layout_alignTop="@id/meanings"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_width="56dp"
        android:layout_height="56dp"
        CircleProgressView:cpv_barWidth="3dp"
        CircleProgressView:cpv_rimWidth="3dp"
        CircleProgressView:cpv_value="0"
        CircleProgressView:cpv_maxValue="100"
        CircleProgressView:cpv_barColor="#232323"
        CircleProgressView:cpv_rimColor="#00000000"
        CircleProgressView:cpv_textColor="#998877"
        CircleProgressView:cpv_unitColor="#187854"
        CircleProgressView:cpv_spinColor="#883366"

        CircleProgressView:cpv_contourSize="0dp"
        CircleProgressView:cpv_autoTextSize="true"
        CircleProgressView:cpv_seekMode="true"
        CircleProgressView:cpv_unit="%"
        CircleProgressView:cpv_unitPosition="right_top"
        CircleProgressView:cpv_unitScale="1"
        CircleProgressView:cpv_textScale="1"
        CircleProgressView:cpv_showUnit="false"
        />


    <RelativeLayout
        android:id="@+id/select_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        >
        <View
            android:id="@+id/nothing"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/nothing"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="-0.5dp"
            android:background="@drawable/btn_left"
            android:text="认识"
            />
        <Button
            android:id="@+id/unknow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/nothing"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="-0.5dp"
            android:background="@drawable/btn_right"
            android:text="不认识"
            />
    </RelativeLayout>

</RelativeLayout>

